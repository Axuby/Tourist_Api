extends base 

block content
h1 This is the tour Overview





    div.card
          div.card__header
            div.card__picture
              div.card__picture-overlay&nbsp;
              img
                src="img/tour-1-cover.jpg"
                alt="Tour 1"
            .card__picture-img"
              />
            </div>

            h3.heading-tertirary
              span = tour.name
            </h3>
          </div>

          div.card__details
            h4.card__sub-heading Easy 5-day tour
            p.card__text
              Breathtaking hike through the Canadian Banff National Park
        
        .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-map-pin')
              span.tour.startLocation.description

            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-calendar')
              span =tour.startDates[0].toLocaleString('en-us',{month:'long',year: 'numeric' })
           card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-flag')
              
              span =`${tour.locations.length}`
            
            card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-user')
              span =`${tour.maxGroupSize} People`
    

          .card__footer
            p
              span.card__footer-value= `${tour.price}`
              span.card__footer-text per person
        
            p.card__ratings
              span.card__footer-value=`${tour.ratingsAverage}`
              span.card__footer-text=`rating ${ratingQuantity}`
              
        
            a.btn.btn--green.btn--small(href=`${tours/${tour.slug}}`)Details


    <div.footer">
      <div.footer__logo">
        <img src="img/logo-green.png" alt="Natours logo" />
      </div>
      <ul.footer__nav">
        <li><a href="#">About us</a></li>
        <li><a href="#">Download apps</a></li>
        <li><a href="#">Become a guide</a></li>
        <li><a href="#">Careers</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
      <p.footer__copyright">
        &copy; by Jonas Schmedtmann. All rights reserved.
      </p>
    </div>
  </body>
</html>